<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
        content="Skontaktuj się przedstawicielami Forest Group w celu uzgodnienia szczegółów twojej wymarzonej wycieczki!">
    <title>Kontakt | Forest Group</title>
    <!-- @include 'resources.kit' -->
</head>

<body>
    <!-- @include 'navigation.kit' -->

    <header class="header">
        <div class="header__img header__img--contact">
            <h1 class="header__img-text">Forest Group<br><span class="header__img-text--bolder">Skontaktuj się z naszymi
                    przedstawicielami!</span></h1>
            <div class="shadow-bg"></div>
        </div>
    </header>

    <main>

        <div class="wrapper">
            <section class="contact">
                <div class="contact__boxes">
                    <div class="contact__box">
                        <i class="fa-solid fa-map-location-dot contact__box-icon"></i>
                        <p class="contact__box-link"><a href="#map">Zobacz na mapie <i
                                    class="fa-solid fa-angles-down"></i></a></p>
                        <p class="contact__box-title">Lokalizacja</p>
                        <div class="contact__box-info">31-358 Kraków<br>ul. Jasnogórska 2</div>
                    </div>
                    <div class="contact__box contact__box--middle">
                        <i class="fa-solid fa-clock contact__box-icon"></i>
                        <p class="contact__box-title">Dostępność</p>
                        <div class="contact__box-info">Poniedziałek-Piątek<br>8:00-16:00</div>
                    </div>
                    <div class="contact__box">
                        <i class="fa-solid fa-phone contact__box-icon"></i>
                        <p class="contact__box-title">Telefon</p>
                        <div class="contact__box-info">508-934-432<br>789-543-546</div>
                    </div>
                </div>
            </section>
        </div>

        <div class="wrapper">
            <section class="sheet">
                <div class="sheet__title">
                    <h2 class="section-title">Napisz do nas!</h2>
                </div>
                <div class="sheet__boxes">
                    <div class="sheet__box sheet__box--first">
                        <form class="sheet__box-form">
                            <h3 class="sheet__box-form-title">Formularz kontaktowy</h3>
                            <label for="sheet__box-form-name">Imię i nazwisko:</label>
                            <input type="text" class="sheet__box-form-name">
                            <label for="sheet__box-form-email">Adres email:</label>
                            <input type="text" class="sheet__box-form-email">
                            <label for="sheet__box-form-message">Treść wiadomości:</label>
                            <textarea name="sheet__box-form-message" rows="5"></textarea>
                            <button class="sheet__box-form-btn">Wyślij</button>
                        </form>
                    </div>
                    <div class="sheet__box" id="map">
                        <h3 class="sheet__box-map-title">Mapa dojazdu</h3>
                        <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2559.8978424941183!2d19.892849199999997!3d50.088199499999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165a2d7f0d587f%3A0x15f4e7c36adff6d2!2sJasnog%C3%B3rska%202%2C%2031-358%20Krak%C3%B3w!5e0!3m2!1spl!2spl!4v1673813286359!5m2!1spl!2spl"
                            allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </section>
        </div>

    </main>

    <!-- @include 'footer.kit' -->

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="dist/js/aossettings.min.js"></script>
    <script src="./dist/js/script.min.js"></script>
</body>

</html>