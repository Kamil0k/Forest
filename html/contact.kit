<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forest</title>
    <!-- @include 'resources.kit' -->
</head>

<body>
    <!-- @include 'navigation.kit' -->

    <header class="header">
        <div class="header__img header__img--contact">
            <h1 class="header__img-text">Forest Group<br><span class="header__img-text--bolder">Skontaktuj się z naszymi
                    przedstawicielami!</span></h1>
            <div class="shadow-bg"></div>
        </div>
    </header>

    <main>

        <div class="wrapper">
            <section class="contact">
                <div class="contact__boxes">
                    <div class="contact__box">
                        <i class="fa-solid fa-map-location-dot contact__box-icon"></i>
                        <p class="contact__box-link"><a href="#">Zobacz na mapie</a></p>
                        <p class="contact__box-title">Lokalizacja</p>
                        <div class="contact__box-info">31-358 Kraków<br>ul. Jasnogórska 2</div>
                    </div>
                    <div class="contact__box contact__box--middle">
                        <i class="fa-solid fa-clock contact__box-icon"></i>
                        <p class="contact__box-title">Dostępność</p>
                        <div class="contact__box-info">Poniedziałek-Piątek<br>8:00-16:00</div>
                    </div>
                    <div class="contact__box">
                        <i class="fa-solid fa-phone contact__box-icon"></i>
                        <p class="contact__box-title">Telefon</p>
                        <div class="contact__box-info">508-934-432<br>789-543-546</div>
                    </div>
                </div>
            </section>
        </div>

    </main>

    <footer>
        <div class="wrapper footer">
            <div class="footer__top">
                <a href="#" class="brand">
                    <div class="brand__icon"><i class="fa-solid fa-tree"></i></div>
                    <div class="brand__title">Forest</div>
                </a>
                <div class="footer__top-links">
                    <div class="footer__top-link">
                        <h4>O nas</h4>
                        <a href="#">Historia</a>
                        <a href="#">Parki</a>
                        <a href="#">Opinie</a>
                    </div>
                    <div class="footer__top-link">
                        <h4>Nasza firma</h4>
                        <a href="#">Praca</a>
                        <a href="#">Kadry</a>
                        <a href="#">Zarząd</a>
                    </div>
                    <div class="footer__top-link">
                        <h4>Dokumenty</h4>
                        <a href="#">Wnioski</a>
                        <a href="#">Rezerwacje</a>
                        <a href="#">Ankiety</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer__bottom">
            <p class="footer__bottom-text">&copy;<span class="year"></span> Forest Group Company Ltd.</p>
        </div>
    </footer>


    <script src="./dist/js/script.min.js"></script>
</body>

</html>